<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="About Me" icon="" />
    <ScrollView>
        <StackLayout>
            <!-- Header -->
            <Label text="About Me" class="text-3xl" textAlignment="center" marginBottom="20"/>
            <!-- Shoutout Lorem Picsum for free random pictures -->
            <!-- Row 1: Bio -->
            <GridLayout 
                columns="*, *" rows="*"
                tap="bioNav">
                <Image 
                    src="~/images/big-me.jpg" 
                    class="rounded m-2"
                    width="48%"
                    row="0" col="0"/>
                <Label 
                    text="Bio" 
                    class="text-2xl text-center"
                    row="0" col="1"/>
            </GridLayout>
            <!-- Row 2: Skills and Hobbies -->
            <GridLayout
                columns="*, *" rows="*"
                tap="skillsNav">
                <Label 
                    text="Skills &amp; Hobbies" 
                    class="text-2xl text-center"
                    textWrap="true"
                    row="0" col="0"/>
                <Image 
                    src="https://picsum.photos/300/200" 
                    class="rounded m-2"
                    width="48%"
                    row="0" col="1"/>
            </GridLayout>
            <!-- Row 3: Contact Me -->
            <GridLayout
                columns="*, *" rows="*"
                tap="contactNav">
                <Label 
                    text="Contact Me" 
                    class="text-2xl text-center" 
                    row="0" col="1"/>
                <Image 
                    src="https://picsum.photos/300/200" 
                    class="rounded m-1"
                    width="48%"
                    row="0" col="0"/>
            </GridLayout>
        </StackLayout>
    </ScrollView>
</Page>
