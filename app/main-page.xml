<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="About Me" icon="" />
    <ScrollView>
        <StackLayout>
            <!-- Header -->
            <Label text="About Me" class="text-3xl" textAlignment="center" marginBottom="20"/>
            <!-- Shoutout Lorem Picsum for free random pictures -->
            <GridLayout columns="*, *" rows="*, *, *">
                <!-- Row 1: Bio -->
                <!-- Add Percent Margins Doofus -->
                <Label 
                    text="Bio" 
                    class="text-2xl" 
                    textAlignment="center" 
                    row="0" col="1"/>
                <Image 
                    src="https://picsum.photos/300/200" 
                    marginBottom="10" tap="bioNav"
                    row="0" col="0"/>
                <!-- Row 2: Skills and Hobbies -->
                <Label 
                    text="Skills &amp; Hobbies" 
                    class="text-2xl" 
                    textAlignment="center" textWrap="true" 
                    row="1" col="0"/>
                <Image 
                    src="https://picsum.photos/300/200" 
                    marginBottom="10" tap="skillsNav"
                    row="1" col="1"/>
                <!-- Row 3: Contact Me -->
                <Label 
                    text="Contact Me" 
                    class="text-2xl" 
                    textAlignment="center" 
                    row="2" col="1"/>
                <Image 
                    src="https://picsum.photos/300/200" 
                    marginBottom="10" tap="contactNav"
                    row="2" col="0"/>
            </GridLayout>
        </StackLayout>
    </ScrollView>
